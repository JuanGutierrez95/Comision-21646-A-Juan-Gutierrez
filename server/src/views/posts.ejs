<%- include("partials/header") -%>

<header class="d-flex justify-content-center">
  <h1>POSTS</h1>
</header>
<main class="d-flex flex-column align-items-center">
  <button type="button" class="btn btn-primary" id="btn-new">New Post</button>
  <div class="container text-center">
    <div class="row" id="container-row"></div>
  </div>

  <!--Parte de Modal-->

  <div
    class="modal fade"
    id="myModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">POST</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form id="formulario">
            <div class="mb-3">
              <label for="inputTitle" class="col-form-label">Title:</label>
              <input type="text" class="form-control" id="inputTitle" />
            </div>
            <div class="mb-3">
              <label for="inputContent" class="col-form-label">Content:</label>
              <input type="text" class="form-control" id="inputContent" />
            </div>
            <div class="mb-3">
              <label for="inputImg" class="col-form-label">imgUrl:</label>
              <input type="url" class="form-control" id="inputImg" />
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button
                type="submit"
                class="btn btn-primary"
                id="btn-save"
              ></button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include("partials/footer") -%>